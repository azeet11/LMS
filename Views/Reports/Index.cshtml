@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Reports";
}

<h2>Reports</h2>

<p>Welcome, @HttpContextAccessor.HttpContext.Session.GetString("UserName")!</p>

<div class="content">
    <div class="tabs">
        <button class="btn btn-dark active" onclick="loadPartialView('BorrowedBooksPartial')">Borrowed Books</button>
        <button class="btn btn-dark active" onclick="loadPartialView('OverduedBooksPartial')">Overdue Books</button>
        <button class="btn btn-dark active" onclick="loadPartialView('PopularBooksPartial')">Popular Books</button>
    </div>
    <div id="reportContent"></div>
</div>

@section Scripts {
    <script>
        function loadPartialView(action) {
            $.ajax({
                url: '@Url.Action("LoadPartialView", "Reports")?partialView=' + action,
                type: 'GET',
                success: function (data) {
                    $('#reportContent').html(data);
                }
            });
        }
    </script>
}