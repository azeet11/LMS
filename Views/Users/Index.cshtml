@model LibraryManagementSystem.Models.HomePageViewModel
@using X.PagedList.Mvc.Core;

@{
    ViewData["Title"] = "Index";
}

<h1>User Management</h1>

<p>
    <a class="btn btn-outline-success" asp-action="Create">Create New</a>
</p>

<form asp-controller="Users" asp-action="Index" method="get">
    <p>
        <select class="search-bar" asp-for="UsersType" asp-items="Model.UserType">
            <option value="">UserType</option>
        </select>

        <label>Name: <input type="text" asp-for="SearchString" class="search-bar" /></label>
        <input type="submit" class="btn btn-sm btn-group-vertical btn-outline-primary" value="Search" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].UserType)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Users) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserType)
            </td>
            <td>
                <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="text-center">
    @Html.PagedListPager(Model.Users, page => Url.Action("Index", new { page, UsersType = ViewBag.CurrentFilter, searchString = ViewBag.CurrentSearch }))
</div>
