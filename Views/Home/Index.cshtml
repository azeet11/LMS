<!-- File: Views/Home/Index.cshtml -->
@model LibraryManagementSystem.Models.HomePageViewModel
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/error.css" />
<h2>Welcome to the Library Management System </h2>
<h3>@HttpContextAccessor.HttpContext.Session.GetString("UserName")!</h3>

@if (HttpContextAccessor.HttpContext.Session.GetString("UserRole") == "Member")
{
    <h3>List of Books</h3>

    <form asp-controller="Home" asp-action="Index" method="get">
        <p>
            <select asp-for="BookAuthor" asp-items="Model.Author">
                <option value="">Author</option>
            </select>

            <label>Title: <input type="text" asp-for="SearchString" /></label>
            <input type="submit" value="Search" />
        </p>
    </form>

    <div asp-validation-summary="All" class="text-danger"></div>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Publisher</th>
                <th>Year</th>
                <th>Pages</th>
                <th>Language</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.Books)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Publisher</td>
                    <td>@book.Year</td>
                    <td>@book.Pages</td>
                    <td>@book.Language</td>
                    <td>
                        <form asp-controller="Books" asp-action="Borrow" method="post">
                            <input type="hidden" name="bookId" value="@book.Id" />
                            <button type="submit" class="btn btn-primary">Borrow</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Books Borrowed by You</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Borrow Date</th>
                <th>Return Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var borrowing in Model.BorrowedBooks)
            {
                <tr>
                    <td>@borrowing.Book.Title</td>
                    <td>@borrowing.Book.Author</td>
                    <td>@borrowing.BorrowDate.ToShortDateString()</td>
                    <td>@borrowing.ReturnDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}


else
{
<partial name="_LoginPartial" />
}
