@model LibraryManagementSystem.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}


<link rel="stylesheet" href="~/css/register.css" />

<form asp-action="Register" method="post">
    <div class="login-container row mx-auto">
        <div class="col-md-6 right flex-column justify-content-center">
            <div>
                <img src="~/img/full_logo.svg" alt="Logo" class="logo-img mt-md-5">
                <p class="description">Already have Account? Sign In now.</p>
                <a asp-controller="Home" asp-action="Login" class="btn btn-outline-light btn-custom">Sign In</a>
            </div>
        </div>
        <div class="col-md-6 left  ">
            <div class="mb-4 text-center">
                <div class="flex-row">
                    <a class="header">Sign Up</a>
                    <img src="~/img/logo.svg" alt="Logo" height="60" />
                </div>
                
                <p class="signup-description">Please provide your information to sign up.</p>
            </div>
            <div class="mb-3">
                <input asp-for="UserName" class="form-control input-field" placeholder="Full Name" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="Email" class="form-control input-field" type="text" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
           
            <div class="mb-3 ">
                <input asp-for="Password" class="form-control input-field" type="password" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="ConfirmPassword" class="form-control input-field" type="password" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="UserType">Section</label>
                <select asp-for="UserType" class="form-control">
                    <option value="Student">Student</option>
                    <option value="Staff">Staff</option>
                </select>
                <span asp-validation-for="UserType" class="text-danger"></span>
            </div>
            <input type="submit" value="Sign Up" class="btn btn-dark btn-custom" />
        </div>
    </div>
</form>