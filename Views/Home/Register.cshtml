@model LibraryManagementSystem.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}


<style>
    body {
        height: 93vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
    }

    .login-container {
        min-height: 605px;
        max-width: 900px;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    }

    .right {
        padding: 50px 98px;
    }

    .left {
        background: #fff;
        padding: 50px;
    }
    .signup-double-container {
        padding: 0 28px;
    }

    .right {
        background: #000;
        color: #fff;
        text-align: center;
    }

    .btn-custom {
        width: 100%;
        padding: 12px 64px;
        border-radius: 15px;
        font-weight: bold;
        font-size: 13px;
        text-transform: uppercase;
    }

    .btn-dark {
        background: #000;
        border: none;
    }

    .signup-description {
        font-size: 12px;
        margin-top: 33px;
    }

    .description {
        font-size: 13px;
        margin-top: 78px;
    }

    .btn-outline-light {
        width: auto;
        border: 1px solid #fff;
    }

    a.header{
        font-size: 30px;
        text-decoration: none;
        color: black;
        padding-right: 15px;
    }

    .input-field {
        border-radius: 12px;
        padding: 10px 15px;
    }

    .logo-img {
        filter: invert(100%);
    }

</style>

<form asp-action="Register" method="post">
    <div class="login-container row mx-auto">
        <div class="col-md-6 right flex-column justify-content-center">
            <div>
                <img src="~/img/full_logo.svg" alt="Logo" class="logo-img mt-md-5">
                <p class="description">Already have Account? Sign In now.</p>
                <a asp-controller="Home" asp-action="Login" class="btn btn-outline-light btn-custom">Sign In</a>
            </div>
        </div>
        <div class="col-md-6 left  ">
            <div class="mb-4 text-center">
                <div class="flex-row">
                    <a class="header">Sign Up</a>
                    <img src="~/img/logo.svg" alt="Logo" height="60" />
                </div>
                
                <p class="signup-description">Please provide your information to sign up.</p>
            </div>
            <div class="mb-3">
                <input asp-for="UserName" class="form-control input-field" placeholder="Full Name" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="Email" class="form-control input-field" type="text" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
           
            <div class="mb-3 ">
                <input asp-for="Password" class="form-control input-field" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="ConfirmPassword" class="form-control input-field" type="text" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="UserType">Section</label>
                <select asp-for="UserType" class="form-control">
                    <option value="Student">Student</option>
                    <option value="Staff">Staff</option>
                </select>
                <span asp-validation-for="UserType" class="text-danger"></span>
            </div>
            <input type="submit" value="Sign Up" class="btn btn-dark btn-custom" />
        </div>
    </div>
    @* <div class="form-group">
        <label asp-for="UserName">Name</label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserType">Section</label>
        <select asp-for="UserType" class="form-control">
            <option value="Student">Student</option>
            <option value="Staff">Staff</option>
        </select>
        <span asp-validation-for="UserType" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Register</button> *@
</form>
