@model LibraryManagementSystem.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<style>
    body {
        height: 93vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
    }

    .login-container {
        min-height: 605px;
        max-width: 900px;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    }

    .left, .right {
        padding: 50px 98px;
    }

    .left {
        background: #fff;
    }

    .right {
        background: #000;
        color: #fff;
        text-align: center;
    }

    .btn-custom {
        width: 100%;
        padding: 12px 64px;
        border-radius: 15px;
        font-weight: bold;
        font-size: 13px;
        text-transform: uppercase;
    }

    .btn-dark {
        background: #000;
        border: none;
    }

    .btn-outline-light {
        width: auto;
        border: 2px solid #fff;
    }

    .input-field {
        border-radius: 12px;
        padding: 10px 15px;
    }

    .logo-img {
        filter: invert(100%);
    }
</style>
@* <h2>Login</h2> *@

<form asp-action="Login" method="post">
    <div class="login-container row mx-auto">
        <div class="col-md-6 left ">
            <div class="text-center mb-4">
                <img src="~/img/logo.svg" alt="Logo" width="80" />
                <h2 class="mt-3">Welcome Back !!</h2>
                <p class="small">Please enter your credentials to log in</p>
            </div>
            <div class="mb-3">
                <input asp-for="Email" class="form-control input-field" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-5">
                <input asp-for="Password" class="form-control input-field" type="password" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <input type="submit" value="Sign In" class="btn btn-dark btn-custom" />
        </div>
        <div class="col-md-6 right flex-column justify-content-center">
            <div>
                <img src="~/img/full_logo.svg" alt="Logo" class="logo-img mt-md-5">
                <p class="pt-5 small">New to our platform? Sign Up now.</p>
                <a asp-controller="Home" asp-action="Register" class="btn btn-outline-light btn-custom mt-md-5">Sign Up</a>
            </div>
        </div>
    </div>
    
